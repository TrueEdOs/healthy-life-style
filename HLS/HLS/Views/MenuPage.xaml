<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HLS.Views.MenuPage"
             x:Name="MenuPagePage"
             Title="Menu">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Image Source="https://i.ytimg.com/vi/hhmzOy-RAp4/hqdefault.jpg" VerticalOptions="FillAndExpand"/>
            <ListView x:Name="ListViewMenu" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10, 40">
                                <Label Text="{Binding Title}" FontSize="24"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>