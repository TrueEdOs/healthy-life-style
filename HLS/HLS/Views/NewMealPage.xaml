<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HLS.Views.NewMealPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="mealIcon.xml" HeightRequest="100"/>
            <Label Text="Name"/>
            <Entry x:Name="NameEntry" Text="{Binding Name}"/>
            <Label Text="Descriprion"/>
            <Entry x:Name="DescriptionEntry" Text="{Binding Description}"/>

            <Label Text="List of dishes:"/>
            <Label Text="{Binding DishesList}"/>
            
            <Button x:Name="CorrectDishesButton" Text="Correct..."/>
            <Button x:Name="AcceptButton"  Text="Push to add"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>